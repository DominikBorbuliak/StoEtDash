@model List<StoEtDash.Web.Models.TransactionViewModel>;

<table>
    <thead>
        <tr>
            <th>Action</th>
            <th>Time</th>
            <th>Name</th>
            <th>No. of shares</th>
            <th>Price / Share</th>
            <th>Total</th>
            <th>Operations</th>
        </tr>
    </thead>
    @{
        if (Model?.Any() == true)
        {
            <tbody>
                @foreach (var transaction in Model)
                {
                    await Html.RenderPartialAsync("_Transaction", transaction);
                }
            </tbody>
        }
        else
        {
            <tfoot>
                <tr>
                    <td>
                        No available transactions, please reload the page
                    </td>
                </tr>
            </tfoot>
        }
    }
</table>